<div>
  <center>
  		Responding to alert: {{ alert.code }} <br>
  		From group: {{ alert.group }}
		<a ng-click='updateStatus(alert.group, alert.user, "responding")'><button type='button' class='btn btn-primary groupbutton'>Responding</button></a>
		<a ng-click='updateStatus(alert.group, alert.user, "not-responding")'><button type='button' class='btn btn-primary groupbutton'>Not Responding</button></a>
  </center>
</div>